{
  "name": "musicbox",
  "version": "0.1.0",
  "description": "A local music player with a high level of appearance.",
  "main": "src/main/main.js",
  "author": "2973918177@qq.com",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:main": "chcp 65001 && electron src/main/main.js",
    "dev:renderer": "cd src/renderer && npm run serve",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && npm run build",
    "build:main": "electron-builder",
    "build:all": "electron-builder -mwl",
    "build:icons": "electron-icon-builder --input=./docs/images/logo.png --output=build --flatten",
    "postinstall": "cd src/renderer && npm install"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "31.0.0-beta.1",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^4.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chardet": "^2.1.0",
    "electron-icon-builder": "^2.0.1",
    "iconv-lite": "^0.6.3",
    "music-metadata": "^7.14.0",
    "fuse.js": "^6.6.2",
    "node-smb2": "^1.3.3",
    "webdav": "^5.8.0"
  }
}
