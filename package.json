{
  "name": "musicbox",
  "version": "0.2.0-beta",
  "description": "A visually stunning, plugin-based local music player.",
  "main": "src/main/main.js",
  "author": {
    "name": "asxez",
    "email": "2973918177@qq.com"
  },
  "homepage": "https://github.com/asxez/MusicBox",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:main": "chcp 65001 && electron src/main/main.js",
    "dev:renderer": "cd src/renderer && npm run serve",
    "build": "npm run build:python && npm run build:renderer && npm run build:main",
    "build:renderer": "cd src/renderer && npm run build",
    "build:main": "electron-builder",
    "build:win": "npm run build:python && electron-builder --win",
    "build:mac": "npm run build:python && electron-builder --mac",
    "build:linux": "npm run build:python && electron-builder --linux",
    "build:cross-platform": "node scripts/build-cross-platform.js --all",
    "build:icons": "electron-icon-builder --input=./docs/images/logo.png --output=build --flatten",
    "build:python": "node scripts/build-python-module.js",
    "postinstall": "cd src/renderer && npm install",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist && cd src/renderer && npm run clean"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^10.0.0",
    "electron": "37.3.1",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^4.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chardet": "^2.1.0",
    "electron-icon-builder": "^2.0.1",
    "fuse.js": "^6.6.2",
    "iconv-lite": "^0.6.3",
    "music-metadata": "^7.14.0",
    "node-id3": "^0.2.9",
    "node-smb2": "^1.3.3",
    "webdav": "^5.8.0"
  }
}
